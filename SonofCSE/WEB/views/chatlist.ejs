<html>
<meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">

<head>
    <meta charset="utf-8" />
    <title>chatlist</title>
    <style>
        @import url(https://fonts.googleapis.com/earlyaccess/nanumgothic.css?display=swap);
@font-face {
  font-family: "Nanum Gothic", sans-serif;
}
* {
  font-family: "Nanum Gothic", sans-serif;
  padding: 0px;
  margin: 0px;
  box-sizing: border-box;
  text-decoration: none;
}
.body_container {
  display: flex;
  position: relative;
  flex-direction: column;
  min-height: 100vh;
}
.body_container .body_header {
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
  z-index: 2;
}
.body_container .body_header .upper_header {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 60px;
  background-color: #d02316;
}
.body_container .body_header .upper_header .left_header {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  width: 200px;
  height: 100%;
}
.body_container .body_header .upper_header .left_header span {
  color: #fff;
  font-size: 25px;
  font-weight: 800;
  word-spacing: -8px;
  white-space: nowrap;
}
.main_container {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: calc(100vh - 110px);
  padding: 30px;
  background-color: #f5f5f5;
  overflow: hidden;
}
.user_container {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 80%;
  border-radius: 10px;
  background-color: #fafafa;
  border: solid;
  border-width: 1px;
  border-color: #ddd;
}
.user_container .user_img_container {
  width: 200px;
  height: 200px;
}
.user_container .user_img_container img {
  width: 100%;
  height: 100%;
  object-fit: fill;
}
.user_container .user_name {
  text-align: center;
  width: 200px;
  margin-bottom: 20px;
}
.user_container .user_name span {
  color: #000;
  font-size: 22px;
  font-weight: 700;
}
.user_container .hashtag_container {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  width: 100%;
  min-height: 80px;
  height: 100%;
  padding: 15px;
  overflow: hidden;
}
.user_container .hashtag_container .hashtag {
  text-align: center;
  width: 80px;
  height: 30px;
  border: none;
  outline: none;
  margin-bottom: 10px;
  border-bottom: solid;
  border-color: #d02316;
  border-width: 2px;
  color: #000;
  font-weight: 700;
  font-size: 18px;
  background: none;
}
.main_container .chat_btn {
  margin-top: 50px;
  width: 120px;
  height: 40px;
  outline: none;
  background-color: #fff;
  border-bottom: solid;
  border-color: #d02316;
  border-width: 2px;
  border-radius: 30px;
  font-size: 16px;
  font-weight: 700;
  transition: 0.4s;
}
.main_container .chat_btn:hover {
  cursor: pointer;
  background-color: rgba(208, 35, 22, 0.2);
}
/* 여기서 부터 body */

.partner_container {
  display: flex;
  position: relative;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 100%;
  margin-top: 5%;
}
.partner_container .goods_container {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  padding: 25px;
  width: 100%;
  height: 100%;
}
.partner_container .goods_container .goods_left_box {
  display: flex;
  position: relative;
  flex-wrap: wrap;
  width: 100%;
  max-width: 700px;
  height: 150px;
  background-color: #fafafa;
  border-radius: 8px 0px 0px 8px;
  border: solid;
  border-width: 1px;
  border-color: #ddd;
  border-right: none;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
}
.partner_container .goods_container .goods_left_box .text_area {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  padding-left: 10px;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.partner_container .goods_container .goods_left_box .text_area .upper_text {
  font-size: 30px;
  font-weight: 600;
  color: #000;
}
.partner_container .goods_container .goods_left_box .text_area .mid_text {
  font-size: 25px;
  color: gray;
}
.partner_container .goods_container .goods_left_box .text_area .mid_date_text {
  font-size: 16px;
  color: gray;
}
.partner_container .goods_container .goods_left_box .text_area .lower_text {
  font-size: 15px;
  font-weight: 600;
}
.partner_container .goods_container .goods_mid_box {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  min-width: 150px;
  width: 200px;
  height: 75px;
  background-color: #fafafa;
  border: solid;
  border-width: 1px;
  border-color: #ddd;
  border-left: none;
}
.partner_container .goods_container .goods_mid_box span {
  color: #000;
  font-size: 25px;
  font-weight: 700;
  white-space: nowrap;
}
.partner_container .goods_container .goods_right_box {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  min-width: 50px;
  width: 125px;
  height: 150px;
  background-color: #e0382c;
  border-radius: 0px 8px 8px 0px;
  cursor: pointer;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
}
.partner_container .goods_container .goods_right_box span {
  color: #fff;
  font-size: 35px;
  font-weight: 700;
  writing-mode: horizontal-tb;
  text-orientation: upright;
}
table {
  position: center;
  width: 90%;
  text-align: center;
  margin-left: 5%;
  margin-top: 3%;
}

td {
  height: 75px;
  border-bottom: dashed 2px #ddd;
}

#name {
  text-decoration: none;
  color: black;
}
.fixedContainer {
  position: fixed;
  bottom: 0px;
  right: 0px;
}
.fixedContainer .fixed {
  position: absolute;
  bottom: 30px;
  right: 30px;
  width: 50px;
  height: 50px;
  background-color: #d02316;
  border-radius: 1000px;
  cursor: pointer;
}
.fixedContainer .fixed img {
  width: 100%;
  height: 100%;
  object-fit: fill;
  filter: invert(1);
}
#boxContainer {
  display: none;
}
#boxContainer .fixedBox {
  display: flex;
  position: absolute;
  align-items: center;
  justify-content: center;
  bottom: 82px;
  right: 30px;
  width: 100px;
  height: 30px;
  background-color: #d02316;
}
#boxContainer .fixedBox1 {
  display: flex;
  position: absolute;
  align-items: center;
  justify-content: center;
  bottom: 117px;
  right: 30px;
  width: 100px;
  height: 30px;
  background-color: #d02316;
}
#boxContainer .fixedBox2 {
  display: flex;
  position: absolute;
  align-items: center;
  justify-content: center;
  bottom: 152px;
  right: 30px;
  width: 100px;
  height: 30px;
  background-color: #d02316;
}
#boxContainer span {
  font-size: 16px;
  font-weight: 600;
  color: #fff;
}
@media only screen and (min-device-width: 320px) and (max-device-width: 500px) {
  .body_container .body_header .upper_header {
    height: 10vh;
  }
  .body_container .body_lower {
    min-height: 90vh;
  }
  .body_container .body_header .upper_header .left_header span {
    font-size: 80px;
  }
  .fixedContainer .fixed {
    width: 150px;
    height: 150px;
  }
  #boxContainer .fixedBox {
    bottom: 200px;
    right: 30px;
    width: 300px;
    height: 100px;
  }
  #boxContainer .fixedBox1 {
    bottom: 320px;
    right: 30px;
    width: 300px;
    height: 100px;
  }
  #boxContainer .fixedBox2 {
    bottom: 440px;
    right: 30px;
    width: 300px;
    height: 100px;
  }
  #boxContainer span {
    font-size: 55px;
  }
}

    </style>
</head>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

<body>
    <div class="body_container">
        <div class="body_header">
            <div class="upper_header">
                <div class="left_header">
                    <span>채팅</span>
                </div>
            </div>
        </div>
        <div class="partner_container">
            <div class="goods_container">
                <div class="goods_left_box">
                    <div class="text_area">
                        <span class="upper_text">야생의 박재완</span>
                    </div>
                </div>
                <a href="/comitTalk">
                    <div class="goods_right_box">
                        <span>입장</span>
                    </div>
                </a>
            </div>
        </div>
        
        <div class="fixedContainer" onclick="showFixed()">
            <div class="fixed">
              <img src="https://github.com/Yoonlang/web-programming/blob/master/html/assets/menu4.png?raw=true" />
            </div>
          </div>
          <div id="boxContainer">
            <a href="/comitFind">
              <div class="fixedBox">
                <span>지도로 가기</span>
              </div>
            </a>
            <a href="#">
              <div class="fixedBox1">
                <span>채팅 목록</span>
              </div>
            </a>
            <a href="/comitMyProfile">
              <div class="fixedBox2">
                <span>내 프로필</span>
              </div>
            </a>
          </div>
    </div>
    <script>
        const showFixed = () =>{
            var box = document.getElementById("boxContainer");
            if(box.style.display == "none"){
                box.style.display = "flex";
            }
            else{
                box.style.display = "none";
            }
        }
    </script>
</body>

