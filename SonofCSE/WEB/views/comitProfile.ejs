    <style>
      @import url(https://fonts.googleapis.com/earlyaccess/nanumgothic.css?display=swap);
@font-face {
  font-family: "Nanum Gothic", sans-serif;
}
* {
  font-family: "Nanum Gothic", sans-serif;
  padding: 0px;
  margin: 0px;
  box-sizing: border-box;
}
.body_container {
  display: flex;
  position: relative;
  flex-direction: column;
}
.body_container .body_header {
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
  z-index: 2;
}
.body_container .body_header .upper_header {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 60px;
  background-color: #d02316;
}
.body_container .body_header .upper_header .left_header {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  width: 200px;
  height: 100%;
}
.body_container .body_header .upper_header .left_header span {
  color: #fff;
  font-size: 25px;
  font-weight: 800;
  word-spacing: -8px;
  white-space: nowrap;
}
.body_container .body_header .lower_header {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 50px;
}
.body_container .body_header .lower_header a {
  width: 25%;
  height: 100%;
  display: flex;
  position: relative;
  text-decoration: none;
}
.body_container .body_header .lower_header .menu {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  transition: 0.1s;
}
.body_container .body_header .lower_header .menu:hover {
  cursor: pointer;
  background: rgba(208, 35, 22, 0.3);
}
.body_container .body_header .lower_header .menu .menu_text {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.body_container .body_header .lower_header .menu .menu_text span {
  font-size: 17px;
  font-weight: 500;
  white-space: nowrap;
  color: #000;
}
.body_container .body_header .lower_header .menu .menu_underbar {
  visibility: hidden;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4px;
  background-color: #d02316;
}
.body_container .body_header .lower_header #ing_customer .menu_underbar {
  visibility: visible;
}
.main_container {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: calc(100vh - 60px);
  padding: 30px;
  background-color: #f5f5f5;
  overflow: hidden;
}
.user_container {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 80%;
  border-radius: 10px;
  background-color: #fafafa;
  border: solid;
  border-width: 1px;
  border-color: #ddd;
}
.user_container .user_img_container {
}
.user_container .user_img_container img {
  width: 100px;
  height: 100px;
  object-fit: fill;
}
.user_container .user_name {
  text-align: center;
  width: 100%;
  margin-bottom: 20px;
}
.user_container .user_name span {
  color: #000;
  font-size: 22px;
  font-weight: 700;
}
.user_container .hashtag_container {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  width: 100%;
  min-height: 80px;
  height: 100%;
  padding: 15px;
  overflow: hidden;
}
.user_container .hashtag_container .hashtag {
  text-align: center;
  width: 80px;
  height: 30px;
  border: none;
  outline: none;
  margin-bottom: 10px;
  color: #000;
  font-weight: 700;
  font-size: 18px;
  background: none;
}
.main_container .chat_btn {
  margin-top: 50px;
  width: 120px;
  height: 40px;
  outline: none;
  background-color: #fff;
  border-bottom: solid;
  border-color: #d02316;
  border-width: 2px;
  border-radius: 30px;
  font-size: 16px;
  font-weight: 700;
  transition: 0.4s;
}
.main_container .chat_btn:hover {
  cursor: pointer;
  background-color: rgba(208, 35, 22, 0.2);
}
.fixedContainer {
  position: fixed;
  bottom: 0px;
  right: 0px;
}
.fixedContainer .fixed {
  position: absolute;
  bottom: 30px;
  right: 30px;
  width: 50px;
  height: 50px;
  background-color: #d02316;
  border-radius: 1000px;
  cursor: pointer;
}
.fixedContainer .fixed img {
  width: 100%;
  height: 100%;
  object-fit: fill;
  filter: invert(1);
}
#boxContainer {
  display: none;
}
#boxContainer .fixedBox {
  display: flex;
  position: fixed;
  align-items: center;
  justify-content: center;
  bottom: 82px;
  right: 30px;
  width: 100px;
  height: 30px;
  background-color: #d02316;
}
#boxContainer .fixedBox1 {
  display: flex;
  position: fixed;
  align-items: center;
  justify-content: center;
  bottom: 117px;
  right: 30px;
  width: 100px;
  height: 30px;
  background-color: #d02316;
}
#boxContainer .fixedBox2 {
  display: flex;
  position: fixed;
  align-items: center;
  justify-content: center;
  bottom: 152px;
  right: 30px;
  width: 100px;
  height: 30px;
  background-color: #d02316;
}
#boxContainer span {
  font-size: 16px;
  font-weight: 600;
  color: #fff;
}
@media only screen and (min-device-width: 320px) and (max-device-width: 500px) {
  .body_container .body_header .upper_header {
    height: 10vh;
  }
  .body_container .main_container {
    height: 90vh;
  }
  .body_container .body_header .upper_header .left_header {
    width: 400px;
    height: 100%;
  }
  .body_container .body_header .upper_header .left_header span {
    font-size: 80px;
  }
  .fixedContainer .fixed {
    width: 150px;
    height: 150px;
  }
  #boxContainer .fixedBox {
    bottom: 200px;
    right: 30px;
    width: 300px;
    height: 100px;
  }
  #boxContainer .fixedBox1 {
    bottom: 320px;
    right: 30px;
    width: 300px;
    height: 100px;
  }
  #boxContainer .fixedBox2 {
    bottom: 440px;
    right: 30px;
    width: 300px;
    height: 100px;
  }
  #boxContainer span {
    font-size: 55px;
  }
  .user_container {
    min-height: 70%;
  }
  .user_container .user_img_container img {
    width: 500px;
    height: 500px;
  }
  .user_container .user_name {
    text-align: center;
    width: 100%;
    margin: 50px 0px;
  }
  .user_container .user_name span {
    color: #000;
    font-size: 55px;
    font-weight: 700;
  }
  .user_container .hashtag_container .hashtag {
    width: 100%;
    height: 100%;
    font-size: 40px;
  }
  .main_container .chat_btn {
    margin-top: 50px;
    width: 300px;
    height: 100px;
    outline: none;
    background-color: #fff;
    border-bottom: solid;
    border-color: #d02316;
    border-width: 2px;
    border-radius: 30px;
    font-size: 40px;
    font-weight: 700;
    transition: 0.4s;
  }
}

    </style>
