  <script>
    const showFixed = () =>{
      var box = document.getElementById("boxContainer");
      if(box.style.display == "none"){
        box.style.display = "flex";
      }
      else{
        box.style.display = "none";
      }
    }
    var index;
    if(localStorage.getItem('DBindex')) {
      index = localStorage.getItem('DBindex');
      console.log(index);
    }
    nicknames = $("p1").text().split('\n');
    nicknames = nicknames.filter(function(s) {
      return Number(s) != 0;
    });
    images = $("p2").text().split('\n');
    images = images.filter(function(s) {
      return Number(s) != 0;
    });
    likes = $("p3").text().split('\n');
    likes = likes.filter(function(s) {
      return Number(s) != 0;
    });
    $(".hashtag").html(likes[index]);
    $("#nickname").html(nicknames[index]);
    $("#image").attr("src", images[index]);
    $(document).ready(function() {
      $("p0").hide();
      $("p1").hide();
      $("p2").hide();
      $("p3").hide();
    });
    
  </script>
