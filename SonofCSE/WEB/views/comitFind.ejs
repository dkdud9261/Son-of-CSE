}
.body_container {
  display: flex;
  position: relative;
  flex-direction: column;
}
.body_container .body_header {
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
  z-index: 2;
}
.body_container .body_header .upper_header {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 60px;
  background-color: #d02316;
}
.body_container .body_header .upper_header .left_header {
