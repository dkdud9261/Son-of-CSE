  background-color: #d02316;
}
#boxContainer .fixedBox1 {
  display: flex;
  position: fixed;
  align-items: center;
  justify-content: center;
  bottom: 117px;
  right: 30px;
  width: 100px;
  height: 30px;
  background-color: #d02316;
}
#boxContainer .fixedBox2 {
  display: flex;
  position: fixed;
  align-items: center;
  justify-content: center;
