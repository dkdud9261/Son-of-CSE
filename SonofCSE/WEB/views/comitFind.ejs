  height: 100%;
}
.body_container .body_header .upper_header .left_header span {
  color: #fff;
  font-size: 25px;
  font-weight: 800;
  word-spacing: -8px;
  white-space: nowrap;
}
.body_container .body_header .lower_header {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 50px;
}
.body_container .body_header .lower_header a {
  width: 25%;
  height: 100%;
  display: flex;
  position: relative;
  text-decoration: none;
}
.body_container .body_header .lower_header .menu {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  transition: 0.1s;
}
.body_container .body_header .lower_header .menu:hover {
  cursor: pointer;
  background: rgba(208, 35, 22, 0.3);
}
.body_container .body_header .lower_header .menu .menu_text {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.body_container .body_header .lower_header .menu .menu_text span {
  font-size: 17px;
  font-weight: 500;
  white-space: nowrap;
  color: #000;
}
.body_container .body_header .lower_header .menu .menu_underbar {
  visibility: hidden;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4px;
  background-color: #d02316;
}
.body_container .body_header .lower_header #new_customer .menu_underbar {
  visibility: visible;
}
#map_canvas {
  width: 100%;
  height: 100vh;
}
.fixedContainer {
  position: fixed;
  bottom: 0px;
  right: 0px;
}
.fixedContainer .fixed {
  position: fixed;
  bottom: 30px;
  right: 30px;
  width: 50px;
  height: 50px;
  background-color: #d02316;
  border-radius: 1000px;
  cursor: pointer;
}
.fixedContainer .fixed img {
  width: 100%;
  height: 100%;
  object-fit: fill;
  filter: invert(1);
}
#boxContainer {
  display: none;
}
#boxContainer .fixedBox {
